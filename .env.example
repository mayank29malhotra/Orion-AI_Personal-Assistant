# =============================================================================
# ORION AI PERSONAL ASSISTANT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Groq API Key (for main LLM worker)
# Get it from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API Key (for evaluator LLM)
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Serper API Key (for web search)
# Get it from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# EMAIL CONFIGURATION (Optional - for email tools)
# =============================================================================

# SMTP Configuration (for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here  # For Gmail, use App Password, not regular password

# IMAP Configuration (for reading emails)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Note: For Gmail, enable "Less secure app access" or use App Passwords
# App Passwords: https://myaccount.google.com/apppasswords

# =============================================================================
# GOOGLE CALENDAR CONFIGURATION (Optional - for calendar tools)
# =============================================================================

# Path to Google Calendar credentials file
# Download from: https://console.cloud.google.com/apis/credentials
GOOGLE_CALENDAR_CREDENTIALS=credentials.json
GOOGLE_CALENDAR_TOKEN=token.json

# =============================================================================
# PUSH NOTIFICATIONS (Optional - NTFY)
# =============================================================================

# NTFY topic for push notifications
# Get it from: https://ntfy.sh/
# Create your own unique topic name
NTFY_TOPIC=your_unique_topic_name

# =============================================================================
# WHATSAPP INTEGRATION (Optional - Twilio)
# =============================================================================

# Twilio credentials for WhatsApp integration
# Get it from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
WHATSAPP_WEBHOOK_PORT=5000

# =============================================================================
# DIRECTORY CONFIGURATION (Optional - defaults provided)
# =============================================================================

SANDBOX_DIR=sandbox
NOTES_DIR=sandbox/notes
TASKS_DIR=sandbox/tasks
SCREENSHOTS_DIR=sandbox/screenshots
TEMP_DIR=sandbox/temp

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=orion.log

# =============================================================================
# RATE LIMITING & CACHING (Optional)
# =============================================================================

MAX_REQUESTS_PER_MINUTE=60
CACHE_TTL_SECONDS=300

# =============================================================================
# MODEL CONFIGURATION (Optional - defaults provided)
# =============================================================================

WORKER_MODEL=llama-3.3-70b-versatile
EVALUATOR_MODEL=gemini-2.5-flash-lite

# =============================================================================
# PROXY CONFIGURATION (Optional - if behind corporate proxy)
# =============================================================================

# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=api.groq.com,generativelanguage.googleapis.com
