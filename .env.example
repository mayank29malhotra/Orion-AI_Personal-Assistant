# =============================================================================
# ORION AI PERSONAL ASSISTANT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Groq API Key (for main LLM worker)
# Get it from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API Key (for evaluator LLM)
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Serper API Key (for web search)
# Get it from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# EMAIL CONFIGURATION (Optional - for email tools)
# =============================================================================

# SMTP Configuration (for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here  # For Gmail, use App Password, not regular password

# IMAP Configuration (for reading emails)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Note: For Gmail, enable "Less secure app access" or use App Passwords
# App Passwords: https://myaccount.google.com/apppasswords

# =============================================================================
# GOOGLE CALENDAR CONFIGURATION (Optional - for calendar tools)
# =============================================================================

# For LOCAL development:
# Download OAuth credentials from: https://console.cloud.google.com/apis/credentials
# Place as: google_cred/credentials.json
# Run once: python -c "from tools.calendar import generate_token; generate_token()"
# This creates google_cred/token.json

# For HUGGINGFACE SPACES:
# Copy the entire content of google_cred/token.json as a secret:
# GOOGLE_CALENDAR_TOKEN_JSON={"token": "...", "refresh_token": "...", ...}

# =============================================================================
# PUSH NOTIFICATIONS (Optional - NTFY)
# =============================================================================

# NTFY topic for push notifications
# Get it from: https://ntfy.sh/
# Create your own unique topic name
NTFY_TOPIC=your_unique_topic_name

# =============================================================================
# TELEGRAM BOT INTEGRATION (For remote access via Telegram)
# =============================================================================

# Bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# YOUR Telegram user ID (REQUIRED for security - blocks everyone else!)
# Get it from @userinfobot on Telegram
# For multiple users: 123456789,987654321
TELEGRAM_ALLOWED_USER_ID=your_telegram_user_id_here

# Webhook port (default: 8000)
TELEGRAM_WEBHOOK_PORT=8000

# =============================================================================
# EMAIL BOT (Optional - receive commands via email)
# =============================================================================

# Check interval in seconds (default: 60)
EMAIL_BOT_CHECK_INTERVAL=60

# Allowed senders (comma-separated, defaults to your own email only)
# EMAIL_BOT_ALLOWED_SENDERS=you@gmail.com,trusted@example.com

# =============================================================================
# DIRECTORY CONFIGURATION (Optional - defaults provided)
# =============================================================================

SANDBOX_DIR=sandbox
NOTES_DIR=sandbox/notes
TASKS_DIR=sandbox/tasks
SCREENSHOTS_DIR=sandbox/screenshots
TEMP_DIR=sandbox/temp

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=orion.log

# =============================================================================
# RATE LIMITING & CACHING (Optional)
# =============================================================================

MAX_REQUESTS_PER_MINUTE=60
CACHE_TTL_SECONDS=300

# LLM Rate Limiting (protects free tier limits)
LLM_REQUESTS_PER_MINUTE=30       # Groq free tier: ~30 requests/min
LLM_COOLDOWN_SECONDS=2.0         # Delay between LLM calls

# =============================================================================
# RETRY & MEMORY CONFIGURATION (Optional)
# =============================================================================

# Failed request retry settings
RETRY_DELAY_MINUTES=5            # Wait time before retry
MAX_RETRY_ATTEMPTS=2             # Number of retry attempts

# Conversation memory settings
MEMORY_HISTORY_LIMIT=20          # Messages to remember per conversation
MEMORY_PRUNE_DAYS=30             # Days before old messages are pruned

# Persistent storage (for HuggingFace Spaces, uses /data automatically)
PERSISTENT_DIR=sandbox/data

# =============================================================================
# HUGGINGFACE SPACES CONFIGURATION (Optional - for HF deployment)
# =============================================================================

# For HF Spaces, set these as SECRETS in the Space settings (not in .env):
# - GROQ_API_KEY
# - GEMINI_API_KEY
# - SERPER_API_KEY
# - EMAIL_ADDRESS (optional)
# - EMAIL_PASSWORD (optional - use Gmail App Password)
# - GOOGLE_CALENDAR_TOKEN_JSON (optional - paste entire token.json content)
# - NTFY_TOPIC (optional)
# - TELEGRAM_BOT_TOKEN (optional)
# - TELEGRAM_ALLOWED_USER_ID (optional)
# - HF_SPACE_URL (for keep-alive - e.g., https://username-orion.hf.space)

# User ID for Gradio sessions (optional)
HF_USER_ID=gradio_user

# =============================================================================
# KEEP-ALIVE CONFIGURATION (For HuggingFace Spaces)
# =============================================================================

# Your HuggingFace Space URL (for self-ping keep-alive)
# Format: https://USERNAME-SPACE_NAME.hf.space
HF_SPACE_URL=

# Keep-alive ping interval in seconds (default: 300 = 5 minutes)
KEEP_ALIVE_INTERVAL=300

# =============================================================================
# MODEL CONFIGURATION (Optional - defaults provided)
# =============================================================================

WORKER_MODEL=llama-3.3-70b-versatile
EVALUATOR_MODEL=gemini-2.5-flash-lite

# =============================================================================
# PROXY CONFIGURATION (Optional - if behind corporate proxy)
# =============================================================================

# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=api.groq.com,generativelanguage.googleapis.com
